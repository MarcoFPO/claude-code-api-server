# ============================================================================
# Claude Code API Server - Konfigurationsbeispiel
# ============================================================================
# Kopiere diese Datei zu .env und passe die Werte an
# cp .env.example .env

# ============================================================================
# SERVER-KONFIGURATION
# ============================================================================

# Port auf dem der Server läuft (default: 3001)
PORT=3001

# Host-Adresse (0.0.0.0 = alle Interfaces, 127.0.0.1 = nur lokal)
HOST=0.0.0.0

# Maximale Request-Größe (default: 100kb)
REQUEST_SIZE_LIMIT=100kb

# Timeout für Graceful Shutdown in Millisekunden (default: 30000)
SHUTDOWN_TIMEOUT=30000

# ============================================================================
# CLAUDE CLI KONFIGURATION
# ============================================================================

# Pfad zur Claude CLI Binary
CLAUDE_CLI_PATH=claude

# Standard-Modell wenn nicht im Request angegeben
# Nutze Model-Aliases: sonnet, opus, haiku
# Oder vollständige Namen: claude-sonnet-4-5-20250929
CLAUDE_DEFAULT_MODEL=sonnet

# Standard Max-Tokens wenn nicht im Request angegeben
CLAUDE_DEFAULT_MAX_TOKENS=2000

# Standard Temperatur wenn nicht im Request angegeben (0.0 - 1.0)
CLAUDE_DEFAULT_TEMPERATURE=0.3

# Timeout für Claude-Prozesse in Millisekunden (default: 120000 = 2 Minuten)
CLAUDE_TIMEOUT=120000

# No Thinking Mode (true = schnellere Antworten, false = bessere Qualität)
CLAUDE_NO_THINKING=false

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate-Limiting aktivieren (true/false)
RATE_LIMIT_ENABLED=true

# Zeitfenster in Millisekunden (default: 60000 = 1 Minute)
RATE_LIMIT_WINDOW=60000

# Max. Anzahl Requests pro Zeitfenster (default: 10)
RATE_LIMIT_MAX=10

# ============================================================================
# AUTHENTIFIZIERUNG
# ============================================================================

# API-Key-Authentifizierung aktivieren (true/false)
# WICHTIG: In Produktion auf true setzen!
API_KEY_AUTH_ENABLED=false

# API-Key (generiere mit: openssl rand -hex 32)
# WICHTIG: Ändere diesen Wert in Produktion!
API_KEY=change-me-in-production

# Header-Name für API-Key (default: X-API-Key)
API_KEY_HEADER=X-API-Key

# ============================================================================
# LOGGING
# ============================================================================

# Log-Level: error, warn, info, debug, verbose
LOG_LEVEL=info

# Log-Format: json (für Produktion) oder simple (für Development)
LOG_FORMAT=json

# Request-Logging aktivieren (true/false)
LOG_REQUESTS=true

# Response-Logging aktivieren (true/false)
LOG_RESPONSES=true

# ============================================================================
# UMGEBUNG
# ============================================================================

# NODE_ENV: development, production, test
NODE_ENV=production
